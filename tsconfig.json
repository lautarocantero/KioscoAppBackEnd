{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "outDir": "./build",
    "strict": true,
    "allowJs": false,
    "typeRoots": ["./src/typings"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/typings/**/*.d.ts"
  ],
  "exclude": ["node_modules"],
}
