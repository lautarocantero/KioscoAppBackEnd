{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "lib": ["es2017", "dom"],
    "outDir": "./build",
    "strict": true,
    "allowJs": false,
    "typeRoots": ["./src/typings"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": { "@typings/*": ["typings/*"] }
  },
  "include": [ 
    "src",
  ],
  "exclude": ["node_modules"]
}
